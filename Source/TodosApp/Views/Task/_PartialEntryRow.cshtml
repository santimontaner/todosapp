@model TodosApp.ViewModels.Task.TaskViewModel
@{
    ViewData["Title"] = "Create";
}

<tr>
    <td>@Model.Description</td>
    <td>@Model.DueDate</td>
    <td>
        <div>
            <button hx-get
                    hx-controller="Task"
                    hx-action="Edit"
                    hx-route-id="@Model.Id"                    
                    class="btn fa fa-edit"
                    _="on click set #newButton.disabled to true"/>            
            <button hx-delete
                    hx-controller="Task"
                    hx-action="Delete"
                    hx-route-id="@Model.Id"
                    hx-swap="outerHtml"
                    class="btn fa fa-trash"/>                       
        </div>                
    </td>                
</tr>